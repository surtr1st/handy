version: '3.1'

services:
  db:
    image: postgres
    restart: always
    environment:
      POSTGRES_USER:      $POSTGRES_USER
      POSTGRES_PASSWORD:  $POSTGRES_PASSWORD
      POSTGRES_HOST:      $POSTGRES_HOST
      POSTGRES_DB:        $POSTGRES_DB
    ports:
      - 5432:5432

  sqlpad:
    image: sqlpad/sqlpad
    restart: always
    environment:
      SQLPAD_ADMIN:           $SQLPAD_ADMIN_USER
      SQLPAD_ADMIN_PASSWORD:  $SQLPAD_ADMIN_PASSWORD
    ports:
      - 3000:3000
